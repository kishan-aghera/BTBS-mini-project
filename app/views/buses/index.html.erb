<section class="hero is-fullheight is-light is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="columns is-8 is-variable ">
        <div class="column is-vcentered is-centered is-half has-text-left">
          <%= render "search_form" %>
        </div>
      </div>
      
      <% unless @available_trips.nil? %>
        <% if @available_trips.any? %>
          <div class="section">
            <h2 class="title is-4">Outbound trips for <%= Busport.find(params[:from_busport_id]).code %> to <%= Busport.find(params[:to_busport_id]).code %> </h2>
            <h2 class="subtitle"><%= @selected_date.strftime('%B %d, %Y') %></h2>
            <%= render "search_form_results" %>
          </div>
        <% else %>
          <p>There are no available trips on the selected date</p>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
