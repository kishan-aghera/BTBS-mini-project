<% departure_busport = @selected_bus.from_busport.code %>
<% arrival_busport = @selected_bus.to_busport.code %>
<% selected_date = @selected_bus.scheduled_on.strftime('%B %d, %Y') %>
<% scheduled_time = @selected_bus.scheduled_on.strftime('%H:%M') %>
<% arrival_time = (@selected_bus.scheduled_on + (@selected_bus.duration/60).to_i.hours).strftime('%H:%M') %>

<section class="hero is-fullheight is-light is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="columns is-8 is-variable ">
        <div class="column has-text-left">
          <h1 class="title">
            Your trip summary
          </h1>
          <h2 class="subtitle">
            <%= selected_date %> | <%= departure_busport %> - <%= arrival_busport %> | <%= scheduled_time %> - <%= arrival_time %>
          </h2>
        </div>

        <div class="column is-three-fifths has-text-left">
          <%= render "new_booking_form" %>
        </div>
      </div>
    </div>
  </div>
</section>
